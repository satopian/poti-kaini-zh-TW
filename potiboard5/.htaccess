<Files ~ "(?i)\.(html?)$">
	<IfModule mod_headers.c>
		Header set Pragma no-cache
		Header set Cache-Control no-cache
		Header set Expires "Thu, 01 Dec 1994 16:00:00 GMT"
	</IfModule>
</Files>
<files ~ "(?i)(^config\.php$|\.(ini|log|dat|json|inc)$)">
	Require all denied
</files>
<Files "manifest.json">
	Require all granted
</Files>
